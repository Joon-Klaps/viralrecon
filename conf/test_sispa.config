/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running minimal tests
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines input files and everything required to run a fast and simple pipeline test.

    Use as follows:
        nextflow run nf-core/viralrecon -profile test_sispa,<docker/singularity> --outdir <OUTDIR>

----------------------------------------------------------------------------------------
*/

process {
    resourceLimits = [
        cpus: 4,
        memory: '15.GB',
        time: '1.h'
    ]
}

params {
    config_profile_name        = 'Test profile'
    config_profile_description = 'Minimal test dataset to check pipeline function'

    // Input data to test SISPA/metagenomics analysis
    input    = "${params.pipelines_testdata_base_path}/samplesheet/v2.6/samplesheet_test_metagenomic_illumina.csv"
    platform = 'illumina'
    protocol = 'metagenomic'

    // Genome references
    genome         = 'MN908947.3'
    kraken2_db     = "${params.pipelines_testdata_base_path}/genome/kraken2/kraken2_hs22.tar.gz"
    pango_database = "${params.pipelines_testdata_base_path}/genome/pangolin_db_v1.36.tar.gz"

    // Variant calling options
    variant_caller = 'bcftools'

    // Freyja db consistency options
    freyja_repeats            = 10
    freyja_barcodes           = "${params.pipelines_testdata_base_path}/genome/freyja/usher_barcodes.feather"
    freyja_lineages_meta      = "${params.pipelines_testdata_base_path}/genome/freyja/curated_lineages.json"
    freyja_lineages_topology  = "${params.pipelines_testdata_base_path}/genome/freyja/lineages.yml"

    // Assembly options
    assemblers     = 'spades,unicycler,minia'
}
